{
    "compilerOptions": {

        "target": "ESNext",
        "module": "esnext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowJs": true,
        "outDir": "dist/",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmit": true,
        "types": [
            "fvtt-types",
        ],
        "newLine": "lf",
        "skipLibCheck": true,
        "baseUrl": "./src"
    },
    "exclude": [
        "dist/**/*.js",
        "node_modules/**"
    ],
    "include": [
        "src/**/*.ts"
    ]
}